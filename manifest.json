{
  "name": "Blabr",
  "version": "0.0.1",
  "description": "Shows information of all hidden fields on the page.",
  "background": {
      "scripts": [
         "js/blabr.js",
         "js/background.js"
      ],
      "persistent": false
   },
   "content_scripts": [
      {
         "matches": ["http://*/", "https://*/"],
         "js": ["js/content_script.js"],
         "all_frames": false
      }
   ],
   "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
   "browser_action": {
      "default_title": "Blabr - Settings",
      "default_popup": "settings.html"
   },
  "permissions": [
    "tabs",
    "storage",
    "background"
  ],
  "manifest_version": 2,
  "commands": {
     "refresh_data": {
        "suggested_key": {
            "default": "Ctrl+Shift+H"
        },
        "description": "Show hidden field information",
        "global": false
     }
  }
}
