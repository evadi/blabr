{
  "name": "Reveal Hidden Fields",
  "version": "0.0.1",
  "description": "Shows values of all hidden fields on the page.",
  "background": {
      "scripts": [
         "js/background.js"
      ]
   },
   "content_scripts": [
      {
         "matches": ["http://localhost/*", "https://localhost/*"],
         "js": ["js/content_script.js"],
         "all_frames": false
      }
   ],
   "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
   "browser_action": {
      "default_title": "Show hidden fields - Settings",
      "default_popup": "settings.html"
   },
  "permissions": [
    "tabs",
    "storage"
  ],
  "manifest_version": 2
}
