{
  "name": "Reveal Hidden Fields",
  "version": "0.0.1",
  "description": "Shows values of all hidden fields on the page.",
  "background": {
      "scripts": [
         "js/background.js"
      ]
   },
   "content_scripts": [
      {
         "matches": ["http://*/*", "https://*/*"],
         "js": ["js/content_script.js"],
         "all_frames": false
      }
   ],
  "permissions": [
    "tabs"
  ],
  "manifest_version": 2
}
